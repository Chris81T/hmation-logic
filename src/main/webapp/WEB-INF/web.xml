    <servlet>
            <servlet-name>HMaticEventServlet</servlet-name>
            <servlet-class>de.chrthms.hmatic4j.event.server.LogicLayerServlet</servlet-class>
            <init-param>
                    <param-name>enabledForExtensions</param-name>
                    <param-value>true</param-value>
            </init-param>
    </servlet>
    <servlet-mapping>
            <servlet-name>HMaticEventServlet</servlet-name>
            <url-pattern>/event</url-pattern>
    </servlet-mapping>

</web-app>